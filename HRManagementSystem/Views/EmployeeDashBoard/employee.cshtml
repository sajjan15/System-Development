@using Microsoft.AspNetCore.Http
@{
    var employeeData = ViewData["EmployeeData"] as List<dynamic>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
        }

        .header {
            background-color: #007bff;
            color: white;
            padding: 15px 0;
            margin-bottom: 20px;
        }

        .table-responsive {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="header text-center">
        <h1>Employee Dashboard</h1>
    </div>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1>Welcome, @Context.Session.GetString("LoggedInUser")</h1>
            <h2>Employee Information</h2>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>EID</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (employeeData != null && employeeData.Any())
                    {
                        foreach (var employee in employeeData)
                        {
                            <tr>
                                <td>@employee.Eid</td>
                                <td>@employee.Name</td>
                                <td>@employee.Department</td>
                                <td>@employee.Email</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No employee data available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>