@model HRManagementSystem.Models.DepositViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Deposit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Add Deposit</h2>
        <form method="post" action="@Url.Action("AddDeposit", "DepositDashboard")">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
           
            <!-- Employee Dropdown for better data processing -->
            <div class="mb-3">
                <label for="employeeDropdown" class="form-label">Select an Employee</label>
                <select class="form-control" id="employeeDropdown" name="Eid" required>
                    <option value="">Select an Employee</option>
                    @foreach (var employee in Model.Employees)
                    {
                        <option value="@employee.Value">@employee.Text</option>
                    }
                </select>
            </div>

            <!-- Amount textbox for adding payroll amount with decimal value-->
            <div class="mb-3">
                <label for="payrollAmount" class="form-label">Payroll Amount</label>
                <input type="number" class="form-control" id="payrollAmount" name="Amount" step="0.01" required>
            </div>

            <!-- Payroll Date textbox for selecting specific date-->
            <div class="mb-3">
                <label for="payrollDate" class="form-label">Payroll Date</label>
                <input type="date" class="form-control" id="payrollDate" name="PaymentDate" required>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Submit</button>
            <!-- Reset button to cancel and start  -->
            <button type="reset" class="btn btn-secondary">Reset</button>
            <!-- Button to go back to dashboard -->
            <a href="@Url.Action("admin", "AdminDashboard")" class="btn btn-outline-secondary">Back to Dashboard</a>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
